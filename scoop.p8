local color = {
  blue = 12,
  peach = 15,
}

local config = {
  water_level = 80,
  boat_height = 4, -- in pixels
}

function _update60()
end

function _draw()
  cls(color.peach)

  -- draw water.
  rectfill(
    0, config.water_level,
    127, 127,
    color.blue)

  -- spr(n, x, y, [w, h], [flip_x], [flip_y])

  -- draw boat.
  spr(1, 64, config.water_level - config.boat_height, 4, 1)

  -- draw sprite.
  spr(5, 64, 64)
end
